<script id="Chat" type="text/template">
    <form>
        <input type="text" placeholder="" name="search">
        <button type="submit">
            <img alt="" src="http://localhost:63342/kosice2-fakeittillyoumakeit/templates/fig/look.jpg"/>
        </button>
    </form>
    <div class="chat-person">
        <img alt="profile-photo" src="http://localhost:63342/kosice2-fakeittillyoumakeit/templates/fig/cool-profile-pic-matheus-ferrero.jpg"/>
        <aside>
            <p>
                <span>Meno a Priezvisko</span> <br><br>
                You have a match
                <br>
            </p>
        </aside>
        <p class="date-speak">
            04.12.2022
            <br><br><br>
            <img alt="" src="http://localhost:63342/kosice2-fakeittillyoumakeit/templates/fig/readed.jpg">
        </p>
    </div>
</script>


<script id="Swipes" type="text/template">
    {{#users}}
    <aside style="background-image: url(&quot;{{image}}&quot;);"
           class="background-person"></aside>
    <div class="person-information">
        <h3>{{name}}, {{age}}</h3> <br>
        <p>
            Gender: {{gender}}<br>
            Family: {{adult_count}} adult, {{child_count}} children
        </p>
        <p>
            {{description}}
        </p>
        <br>

    </div>
    {{/users}}
</script>

